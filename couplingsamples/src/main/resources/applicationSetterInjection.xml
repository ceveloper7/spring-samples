<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="carSpecification" class="com.ceva.injection.setter.Specification">
        <property name="make" value="Fiat" />
        <property name="model" value="Argo" />
    </bean>

    <bean id="myCar" class="com.ceva.injection.setter.Car">
        <!-- Setter Injection -->
        <property name ="specification" ref="carSpecification" />
    </bean>

</beans>